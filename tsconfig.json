{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "out",
        "importHelpers": true,
        "sourceMap": true,
        "strict": true,
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": ["src/*", "node_modules/*"]
